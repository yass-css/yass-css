{
  "roots": ["<rootDir>"],
  "transform": {
    "^.+\\.ts?$": "ts-jest"
  },
  "preset": "ts-jest",
  "testRegex": "(__tests__|((\\.|/)(spec))\\.ts?)$",
  "moduleFileExtensions": ["ts", "js", "json", "node"],
  "collectCoverage": true,
  "clearMocks": true,
  "testTimeout": 20000,
  "coverageDirectory": "coverage"
}
